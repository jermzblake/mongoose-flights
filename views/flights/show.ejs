<%- include ../partials/header.ejs %> 
<%- include ../partials/nav.ejs %>

<h1>Flight Details</h1>
<section id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight No.: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <div>Destination(s): </div>
    <div><% if (flight.destinations.length) { %>
        <table class="table">
          <thead>
            <tr>
              <th>Airport</th>
              <th>Arrival</th>
            </tr>
          </thead>
          <tbody>
            <% flight.destinations.forEach(function(d) { %>
              <tr>
                <td><%= d.airport %></td>
                <td><%= d.arrival %></td>
                <td><a href="/flights/<%= d._id %>">
                    <form action="/flights/<%= flight.id %>?_method=DELETE"
                    class="delete-form" method="POST">
                    <button type="submit">DELETE</button>
                  </form>
                </a></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h6>No Destinations Yet</h6>
      <% } %>
    </div>
  </section>

  <section>
      <h3>Tickets</h3> <a href="/flights/<%= flight._id %>/tickets/new" class="btn btn-info btn-sm">New Ticket</a> 
      <ul>
          <% tickets.forEach((t)=> { %>
            <li><%= t.seat %> - $<%= t.price %></li>
          <% }) %>
      </ul>
  </section>

  <br><br><h2>Destinations</h2>
  <form action="/flights/<%= flight._id %>/destinations" method="POST">
    <label>Airport:
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DEN">DEN</option>
            <option value="DFW">DFW</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    </label><br>
    <label>Arrival:
        <input type="datetime-local" name="arrival">
    </label><br>
    <input type="submit" class="btn btn-info" value="Add Destination">

</form>
 

<%- include ../partials/footer.ejs %>